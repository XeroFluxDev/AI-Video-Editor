# AI Video Editor - Environment Configuration

# FFmpeg Configuration
FFMPEG_PATH=/usr/bin/ffmpeg
FFPROBE_PATH=/usr/bin/ffprobe
FFMPEG_TIMEOUT=3600

# Storage Paths
STORAGE_PATH=../storage
UPLOAD_MAX_SIZE=524288000
ALLOWED_VIDEO_TYPES=video/mp4,video/avi,video/mov,video/webm,video/mkv

# OpenRouter API Configuration (for AI features)
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=anthropic/claude-3.5-sonnet

# OpenAI Whisper API Configuration (for subtitles)
OPENAI_API_KEY=your_openai_api_key_here

# Application Settings
APP_NAME="AI Video Editor"
APP_ENV=production
APP_DEBUG=false

# Security
SESSION_LIFETIME=120
MAX_FILE_SIZE=500M

# Performance
MEMORY_LIMIT=512M
EXECUTION_TIME_LIMIT=600
